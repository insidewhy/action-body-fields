{
  "name": "action-body-fields",
  "version": "1.0.1",
  "description": "Add fields to github body",
  "main": "lib/index.js",
  "type": "module",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "esbuild --bundle --platform=node --format=esm src/index.ts --outfile=lib/index.js",
    "lint-check": "eslint src/*.ts",
    "lint": "pnpm lint-check --fix",
    "format-check": "prettier --check .",
    "format": "pnpm format-check --write",
    "type-check": "pnpm tsc --noEmit",
    "test": "pnpm vitest",
    "validate": "pnpm lint-check && pnpm format-check && pnpm type-check && pnpm test run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/insidewhy/action-body-fields"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "github",
    "jira",
    "jira-issue"
  ],
  "author": "insidewhy",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@octokit/rest": "^21.0.2",
    "@types/node": "22.8.7",
    "esbuild": "0.24.0",
    "eslint": "9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "munamuna": "^0.2.1",
    "prettier": "3.3.3",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.12.2",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "pnpm": "9.11.0",
    "node": "20.17.0"
  }
}
